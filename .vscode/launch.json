    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Remote",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server",
            "args": ["start-server", "-address=localhost", "-port=9000", "-tls=false"],
            "env": { "TEREOBOT_APIKEY": "testapikey" }
        },
        {
            "name": "Launch Remote Convertor",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/convertor",
            "args": [],
            "env": {}
        }
    ]
}